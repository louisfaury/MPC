%% \coolbox{external_color}{Title}{text} 
\newcommand\coolbox[4][0.4pt]
{
	\setlength\fboxrule{#1}
	\noindent\fcolorbox{#2}{verylightgray}{
		\begin{minipage}{\linewidth}
		\noindent \textbf{\textcolor{#2}{#3}} 
	
		\vspace{10pt}
		
			\hfill\begin{minipage}{0.95\linewidth}
			#4
			\end{minipage}
		\end{minipage}
		}
}

%% Titlebox : \titlebox{width}{Header}{Detail}
\newcommand\titlebox[3]
{
	\begin{center}
		\doublebox{		
			\begin{minipage}{#1\linewidth}
			\vspace{4pt}
				\begin{center}
					\large{
						\textsf
						{
							\textbf
							{
								#2\\ 
							}
							#3
						}
					}
				\end{center}
			\vspace{3pt}
			\end{minipage}
		}
		\end{center}
}

