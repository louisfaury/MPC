%% Stats : conditional probability
\newcommand\Pro[1]
{
	\mathbb{P}\left( #1 \right)
}

\newcommand\E[2][]
{
	\mathbb{E}_{#1}\left[ #2 \right]	
}

\newcommand\condp[2]
{
	p(#1 \, \vert \, #2)
}

\newcommand\Var[1]
{
	\mathbb{V}\text{ar}\left(#1\right)
}

\newcommand\normalDb[3]
{
	 \mathcal{N}\left(#1\, \left\vert \, #2, #3\right.\right)
}

\newcommand\argmax[2]
{
	\underset{ #1 }{\operatorname{argmax}}\left\{ #2 \right\}
}

\newcommand\argmin[2]
{
	\underset{ #1 }{\operatorname{argmin}}\left\{ #2 \right\}
}

\NewDocumentCommand \grad { O{ } O{ } m }
{ 
	\nabla^{ #2 }_{ #1 }{ #3 }
}

\newcommand\eps
{
	\varepsilon
}

\newcommand\boxedeq[2]
{
	\begin{empheq}[box={\color{#1}\fboxsep=10pt\fbox}]{align}
		#2
	\end{empheq} 
}
